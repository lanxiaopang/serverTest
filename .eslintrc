{
  "extends": "eslint:recommended",

  "env":{
    "node":true,
    "es6":false,
    "amd":true,
    "browser": true
  },
  "globals": {
    "requirejs": true,
    "require": true,
    "$": true
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": "off",
    "no-console":"off",
    "no-unused-vars":"off",
    "no-unreachable":"off",
    "no-redeclare":"warn"
  },
  /*
    eslint-plugin-html 插件
  */
  "plugins": [
    "html"
  ]
}